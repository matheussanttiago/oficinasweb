<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Serviços da oficina</title>

  <!-- LINKS CSS -->
  <link rel="stylesheet" href="/css/default.css">
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/styleServicos.css">
  <!-- <link rel="stylesheet" href="css/styleHome.css"> -->

  <!-- LINKS PARA O GOOGLE FONTS -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- FONTS -->
  <!-- GOTHIC-A1 -->
  <link href="https://fonts.googleapis.com/css2?family=Gothic+A1&display=swap" rel="stylesheet">
  <!-- SORA -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&family=Sora:wght@400;600&display=swap"
    rel="stylesheet">

  <!-- LINKS JS -->
  <script src="https://kit.fontawesome.com/84b2985f50.js" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="/js/script_menu.js"></script>
</head>

<body>
  <div id="modal"></div>

  <%- include('../partial/header.ejs') %>

  <main>
    <section id="servicos">
      <div id="titulos_servicos">
        <div id="titulos">
          <% if(oficina[0].foto_perfil_ofc == null) { %>
              <div class="foto_oficina">
                  <img src="/img/foto-padrao-oficina.svg" class="img-foto_oficina">
              </div>
          <% } else { %>
              <div class="foto_oficina">
                  <img src="data:image/gif;base64,<%= oficina[0].foto_perfil_ofc %>" alt="foto de perfil da oficina" class="img-foto_oficina">
              </div>
          <% } %>
          <div>
              <h1 class="titulo"><%= oficina[0].nome_oficina %></h1>
              <h2 class="legenda">Produtos</h2>
          </div>
      </div>

      </div>
      <div id="box_servicos">
        <% for(let i = 0; i < servicosOfc.length; i++) { %>
          <a href="/servico/<%=servicosOfc[i].id_produto%>">
            <div class="melhores-servicos">
              <img src="data:image/gif;base64,<%= servicosOfc[i].foto1 %>" alt="Foto do serviço" id="foto-servico">
              <h5 class="titulos_servico"><%= servicosOfc[i].nome_produto %></h5>
              <p class="desc_servico" id="desc_servico"><%= servicosOfc[i].descricao_prod %></p>
              <button class="preco_servico default_btn">R$<%= String(servicosOfc[i].valor_produto).replace('.', ',') %></button>
              <img src="/img/favorito_icon.svg" alt="Ícone de coração para favoritar serviço" id="favorito">
            </div>
          </a>
        <% } %>
      </div>
    </section>
  </main>

</body>

</html>