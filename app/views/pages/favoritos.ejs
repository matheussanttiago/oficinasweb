<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Favoritos</title>

    <!-- LINKS CSS -->
    <!-- <link rel="stylesheet" href="css/styleavaliacao.css"> -->
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/default.css">
    <link rel="stylesheet" href="css/styleHistorico.css">

    <!-- LINKS PARA O GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- FONTS -->
    <!-- GOTHIC-A1 -->
    <link href="https://fonts.googleapis.com/css2?family=Gothic+A1&display=swap" rel="stylesheet">
    <!-- SORA -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&family=Sora:wght@400;600&display=swap"
        rel="stylesheet">

    <!-- LINKS JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="js/script_menu.js"></script>
    <script src="js/script_favoritos.js"></script>
</head>

<body>
    <div id="modal"></div>

    <%- include('../partial/header.ejs') %>

    <main>
        <div id="modal_box">

            <div id="dados_usuario">
                <div class="foto">
                    <div id="inputs_foto">
                        <div class="circle_foto">
                            <img src="img/foto-padrao.svg" alt="" id="foto_padrao">
                        </div>
                        <!-- <div id="foto"></div> -->
                        <label for="add-img" id="addinput"><img src="img/add-foto.svg" alt="logo"></label>
                        <input type="file" name="add-img" id="add-img">
                    </div>
                </div>
                <h3 class="nome_usuario">Sebastião Silva</h3>
                <span class="email_usuario">sebastiãosilva@outlook.com</span>
            </div>

            <hr>

            <div id="opcoes">
                <div id="editar-perfil" class="opcao">
                    <img src="img/user_icon_branco.svg" alt="">
                    <span>Editar Perfil</span>
                </div>
                <div id="historico" class="opcao">
                    <img src="img/file_icon_branco.svg" alt="">
                    <span>Historico</span>
                </div>
                <div id="favoritos" class="opcao">
                    <img src="img/favorito_icon_branco.svg" alt="">
                    <span>Favoritos</span>
                </div>
                <div id="notificacoes" class="opcao">
                    <img src="img/notificacao_icon.svg" alt="">
                    <span>Notificações</span>
                </div>
            </div>

            <hr>

            <div id="suas_oficinas">
                <div id="opcao_suas-oficinas" class="opcao">
                    <img src="img/config_icon.svg" alt="">
                    <span>Suas Oficinas</span>
                </div>
                <div class="oficina opcao">
                    <div id="foto_oficina_menu"></div>
                    <span>Oficina do Tião</span>
                    <span class="tipo_plano" id="plano_ouro">ouro</span>
                </div>
                <div class="oficina opcao">
                    <div id="foto_oficina_menu"></div>
                    <span>Los Santos Customs</span>
                    <span class="tipo_plano" id="plano_prata">Prata</span>
                </div>
            </div>

            <hr>

            <div id="logout">
                <div id="opcao-logout" class="opcao">
                    <img src="img/user_icon_laranja.svg" alt="">
                    <span>Sair</span>
                </div>
            </div>

        </div>
        <section>

            <h1 class="titulo"> Favoritos </h1>

            <div id="tipo_produto">
                <h3 class="oficinas">Oficinas</h3>
                <h3 class="produtos">Produtos</h3>
                <h3 class="servicos">Serviços</h3>
            </div>
            <div id="seus_produtos">


                <section id="oficinas">
                    <div class="box_produto">
                        <div class="content">
                        <img class="produto" src="img/oficinas/ls_customs.jpg" alt="">
                        <div class="infos_produto">
                            <span class="tipo_produto">Oficina</span>
                            <h4 class="tinta">Los Santos Customs</h4>
                            <h3 class="desc_oficina">Custoomização e pintura</h3>
                            <div class="local_oficina">
                                <img src="img/local_icon.svg" alt="">
                                <span class="bairro_oficina">Engenho Novo</span>
                            </div>
                            <div id="notas">
                                <div>
                                    <img src="img/star.svg" alt="" class="star-icon">
                                    <span class="nota">4.8</span>
                                    <spaan class="num_avaliacao">(78 avaliações)</spaan>
                                </div>
                                <img src="img/favoritado.svg" alt="" class="fav_icon">

                            </div>
                        </div>
                    </div>
                </section>

                <section id="produtos">
                    <div class="box_produto">
                        <div class="content">
                            <img class="produto" src="img/produtos/exemplo_produto.jpg" alt="">
                            <div class="infos_produto">
                                <span class="tipo_produto">Produto</span>
                                <h4 class="tinta">Tinta automotiva branco brilhante</h4>
                                <h3 class="preco">R$999,99</h3>
                                <div id="notas">
                                    <div>
                                        <img src="img/star.svg" alt="" class="star-icon">
                                        <span class="nota">4.8</span>
                                        <spaan class="num_avaliacao">(78 avaliações)</span>
                                    </div>
                                    <img src="img/favoritado.svg" alt="" class="fav_icon">
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section id="servicos">
                    <div class="box_produto">
                        <div class="content">
                            <img class="produto" src="img/produtos/exemplo_produto.jpg" alt="">
                            <div class="infos_produto">
                                <span class="tipo_produto">Serviço</span>
                                <h4 class="tinta">Pintura Fosca</h4>
                                <h3 class="desc_oficina">Feita com tintas de Qualidade</h3>
                                <h3 class="preco">R$3200,00</h3>
                                <div id="notas">
                                    <div>
                                        <img src="img/star.svg" alt="" class="star-icon">
                                        <span class="nota">4.8</span>
                                        <spaan class="num_avaliacao">(78 avaliações)</spaan>
                                    </div>
                                    <img src="img/favoritado.svg" alt="" class="fav_icon">
                                </div>
                            </div>
                        </div>
                    </div>
                </section>


        </section>

    </main>

</body>

</html>