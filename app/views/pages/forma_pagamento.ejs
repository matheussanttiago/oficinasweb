<body>
<div id="modal"></div>
<%- include('../partial/normalHeader.ejs') %>

    <main>
        <section id="sec-forma_pgmt">

            <div class="titulo_arrow">
                <img src="img/arrow_left.svg" alt="flecha virada para esquerda" onclick="window.history.back()">
                <h1 class="titulo"> Pagamento </h1>
            </div>
            <div class="frase_pgt">
                <div class="bold"><span>Forma de Pagamento</span></div>
                <div><a href="#" class="btn_add_cartao">Adicionar Cartão</a></div>
            </div>


            <div class="opcao_pgmt">
                <div class="opcoes_pagamento"><img class="icon_pagamento" src="./img/logos_paypal.svg" alt="logo PayPal">
                <h3 class="nome_forma">Paypal</h3></div>
                <label class="container">
                    <input type="radio" name="option-pgt" id="opcao-paypal">
                    <span class="checkmark"></span>
                  </label>
            </div>
            <div class="opcao_pgmt">
                <div class="opcoes_pagamento"><img class="icon_pagamento" src="./img/logo_google-pay.svg" alt="logo Google Pay">
                <h3 class="nome_forma">Google Pay</h3></div>
                <label class="container">
                    <input type="radio" name="option-pgt" id="opcao-google">
                    <span class="checkmark"></span>
                  </label>
            </div>
            <div class="opcao_pgmt">
                <div class="opcoes_pagamento"><img class="icon_pagamento" src="./img/logo_apple-pay.svg" alt="logo Apple Pay">
                <h3 class="nome_forma">Apple Pay</h3></div>
                <label class="container">
                    <input type="radio" name="option-pgt" id="opcao-apple">
                    <span class="checkmark"></span>
                  </label>
            </div>
            <div class="opcao_pgmt">
                <div class="opcoes_pagamento"><img class="icon_pagamento" src="./img/logo_samsung-pay.svg" alt="logo Samsung Pay">
                <h3 class="nome_forma">Samsung Pay</h3></div>
                <label class="container">
                    <input type="radio" name="option-pgt" id="opcao-samsung">
                    <span class="checkmark"></span>
                  </label>
            </div>
            <span class="frase_pgm"><b>Pagar com cartão de Credito/Debito</b></span>
            <div class="opcao_pgmt" id="box-opcao-cartao">
                <div class="opcoes_pagamento"><img class="icon_pagamento" src="./img/logos_mastercard.svg" alt="logo Mastercard">
                <h3 class="nome_forma" id="num_cartao">**** **** **** 0007</h3></div>
                <label class="container">
                    <input type="radio" name="option-pgt" id="opcao-cartao">
                    <span class="checkmark"></span>
                  </label>
            </div>
            <button class="btn" id="next-step"> <span>Continuar</span> </button>

        </section>

        <section id="plano">

            <div class="titulo_arrow">
                <img src="img/arrow_left.svg" alt="flecha virada para esquerda" onclick="window.history.back()" class="voltar_alterar">
                <h1 class="titulo titulo-pgmt"> Pagamento </h1>
            </div>

            <!-- <div class="plans" id="prata">
                <div class="rank_plans">
                    <h5>Prata</h5>
                    <img src="img/flag_silver.svg" alt="rank bronze">
                </div>
                <div class="informations_plans">
                    <ul>
                        <h3>R$ 29,90 <span>/ Mês</span></h3>
                        <li><mark>Avaliação de 30 dias</mark></li>
                        <li><span>Perfil da oficina</span></li>
                        <li><span>Visibiladade baixa</span></li>
                        <li><span>10 serviços</span></li>
                    </ul>
                </div>
            </div> -->
            
            <% if(plano == 'basico') { %>
                <div class="plans" id="basico">
                    <h5>Básico</h5>
                    <div class="informations_plans">
                        <ul>
                            <h3>Gratuito</h3>
                            <li><span>3 produtos</span></li>
                            <li><span>2 serviços</span></li>
                            <li><span><s>Perfil da oficina</s></span></li>
                        </ul>
                    </div>
                </div>
            <% } %>
            <% if(plano == 'prata') { %>
                <div class="plans" id="prata">
                    <div class="rank_plans">
                        <h5>Prata</h5>
                        <img src="img/flag_silver.svg" alt="rank bronze">
                    </div>
                    <div class="informations_plans">
                        <ul>
                            <h3>R$ 29,90 <span>/ Mês</span></h3>
                            <li><mark>Avaliação de 30 dias</mark></li>
                            <li><span>Perfil da oficina</span></li>
                            <li><span>Visibiladade baixa</span></li>
                            <li><span>10 serviços</span></li>
                        </ul>
                    </div>
                </div>
            <% } %>
            <% if(plano == 'ouro') { %>
                <div class="plans" id="ouro">
                    <div class="rank_plans silver">
                        <h5>Ouro</h5>
                        <img src="img/flag_gold.svg" alt="rank prata">
                    </div>
                    <div class="informations_plans">
                        <ul>
                            <h3>R$ 39,90 <span>/ Mês</span></h3>
                            <li><mark>Avaliação de 30 dias</mark></li>
                            <li><span>Perfil da oficina</span></li>
                            <li><span>Visibiladade média</span></li>
                            <li><span>20 serviços</span></li>
                        </ul>
                    </div>
                </div>
            <% } %>
            <% if(plano == 'diamante') { %>
                <div class="plans" id="diamante">
                    <div class="rank_plans gold">
                        <h5>Diamante</h5>
                        <img src="img/flag_dima.svg" alt="rank ouro">
                    </div>
                    <div class="informations_plans">
                        <ul>
                            <h3>R$ 59,90 <span>/ Mês</span></h3>
                            <li><mark>Avaliação de 30 dias</mark></li>
                            <li><span>Perfil da oficina</span></li>
                            <li><span>Visibiladade alta</span></li>
                            <li><span>40 serviços</span></li>
                        </ul>
                        <!-- <form action="/dima" method="post"><a href="/pagamento"><button class="shadow_btn">Assinar</button></a></form> -->
                    </div>
                </div>
            <% } %>

            <div class="frase_pgt">
                <div class="bold"><span>Forma de Pagamento</span></div>
                <div><a href="#" class="btn_alterar">Alterar</a></div>
            </div>


            <div class="opcao_pgmt">
                <div class="opcoes_pagamento"><img class="icon_pagamento" src="./img/logos_paypal.svg" alt="logo PayPal" id="img-escolhida">
                <h3 class="nome_forma" id="forma-escolhida">Paypal</h3></div>
            </div>
    
            <button class="btn" id="finish"> <span>Continuar</span> </button>

        </section>

        <section id='cartao_section1'>

                <div class="titulo_arrow">
                  <img src="img/arrow_left.svg" alt="flecha virada para esquerda" onclick="window.history.back()" class="voltar">
                  <h1 class="titulo"> Adicionar Cartão </h1>
                </div>



                <div class="container-box-card">
                    <form class="form2" action="">
                        <div class="front">
                            <div class="image">
                                <img src="/img/cartao/chip.png" alt="chip" srcset="">
                                <img src="/img/cartao/visa.png" alt="cartão visa" srcset="">
                            </div>
                         </div>   
    
                         <div id="cifrao">
                            <span>NÚMERO DO CARTÃO</span>
                        </div>
                            <div id="teste1">
                                <div class="teste2">
                                    <span>TITULAR DO CARTÃO</span>   
                                </div>  
                                <div id="teste22" class="teste2">
                                   <div>
                                        <span class="exp-month">MÊS</span>
                                        <span class="exp-year">ANO</span>
                                    </div>
                                    <div class="cvv-box">CVV</div>
                                </div>  
                            </div>
                        <div class="back">
                            <div class="stripe"></div> 
                        </div>
                    </form>
            
                    <div class="inputBox">
                        <span></span>
                        <input type="text" class="card-number-input  inputs seila" class="" placeholder="Número do cartão" id="input-cartao">
                    </div>
    
                    <div class="inputBox">  
                        <span></span>
                        <input type="text" class="card-holder-input inputs titular" placeholder="Titular do cartão">
                    </div>
    
                    <div class="flexbox">
                        <div class="pequeno">
                            <span></span>
                            <select name="" id="" class="month-input">
                                <option value="mês" selected disabled>Mês</option>
                                <option value="01">01</option>
                                <option value="02">02</option>
                                <option value="03">03</option>
                                <option value="04">04</option>
                                <option value="05">05</option>
                                <option value="06">06</option>
                                <option value="07">07</option>
                                <option value="08">08</option>
                                <option value="09">09</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                                <option value="12">12</option>
                            </select>
                        </div>
                        <div class="pequeno">
                            <span</span>
                            <select name="" id="" class="year-input">
                                <option value="ano" selected disabled>Ano</option>
                                <option value="2022">2022</option>
                                <option value="2023">2023</option>
                                <option value="2024">2024</option>
                                <option value="2025">2025</option>
                                <option value="2026">2026</option>
                                <option value="2027">2027</option>
                                <option value="2028">2028</option>
                                <option value="2029">2029</option>
                                <option value="2030">2030</option>
                            </select>
                        </div>
                        <div id="inputBox" class="pequeno">
                            <span></span>
                            <input class="cvv-input" type="text" maxlength="3"  placeholder="CVV"> 
                        </div>
                    </div>
                </div>
                <button class="btn" id="cartao-adicionado"> <span>Adicionar cartão</span> </button>
    
                <!-- <div class="divEnviar">
                    <input class="adicionar" type="submit" value="Adicionar" class="submit-btn"> 
                </div> -->
          
                <!-- <div id="container-cartao">
                  <div id="quadrado">
                    <label for="add-img" id="addinput"></label>
          
                    <img src="" alt="" id="teste">
                  </div>
          
          
                  <div class="form_doc">
          
                    <input type="" name="" placeholder="Nome impresso no cartão" id="password" class="inputs" required>
                    <input type="" name="" placeholder="Número do cartão" id="password" class="inputs" required>
          
                    <div class="btnpequeno">
                      <input type="date" name="Data de validade" data-date-format="MMM YYYY" placeholder="Data de validade"
                        id="validade" required class="inputs">
                      <input type="" name="CVV" placeholder="Código CVV" id="cvv" class="inputs" required>
                    </div>
                    <button class="btn"> <span>Adicionar cartão</span> </button>
          
                  </div>
                </div> -->
          
              </section>

              <div class="pop-up" id="pop-up_pagamento">
                <img src="img/img_pop-up.svg" alt="">
                <h3>Pagamento Concluido!</h3>

                <p>sua conta já está pronta para usar</p>

                <button class="primeira-opcao-btn"><a href="dashboard/<%=nomeTela%>">Ir para oficina</a></button>
            </div>
    </main>



    <script>
        

        document.querySelector('.card-number-input').oninput = () => {
            document.querySelector('#cifrao').innerText = document.querySelector('.card-number-input').value;
        }

        document.querySelector('.card-holder-input').oninput = () => {
            document.querySelector('.teste2').innerText = document.querySelector('.card-holder-input').value;
        }

        document.querySelector('.month-input').oninput = () => {
            document.querySelector('.exp-month').innerText = document.querySelector('.month-input').value;
        }

        document.querySelector('.year-input').oninput = () => {
            document.querySelector('.exp-year').innerText = document.querySelector('.year-input').value;
        }

