<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Todos os Serviços</title>

    <!-- LINKS CSS -->
    <link rel="stylesheet" href="css/default.css">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/styleServicos.css">
    <!-- <link rel="stylesheet" href="css/styleHome.css"> -->

    <!-- LINKS PARA O GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- FONTS -->
    <!-- GOTHIC-A1 -->
    <link href="https://fonts.googleapis.com/css2?family=Gothic+A1&display=swap" rel="stylesheet">
    <!-- SORA -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&family=Sora:wght@400;600&display=swap"
        rel="stylesheet">

    <!-- LINKS JS -->
    <script src="https://kit.fontawesome.com/84b2985f50.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="js/script_menu.js"></script>
</head>

<body>
    <div id="modal"></div>

    <%- include('../partial/header.ejs') %>

    <main>
        <section id="servicos">
            <div id="titulos_servicos">
                <div id="titulo_avaliacao">
                    <div class="titulo_arrow">
                        <img src="img/arrow_left.svg" alt="flecha virada para esquerda" onclick="window.history.back()">
                        <h1 class="titulo"> Serviços </h1>
                    </div>
                    <span class="legenda"> Melhores Avaliados </span>
                </div>
            </div>

            <div id="box_servicos">
                <% for(let i = 0; i < servicos.length; i++) { %>
                    <div class="melhores-servicos">
                        <img src="data:image/gif;base64,<%= servicos[i].foto1 %>" alt="Foto do serviço" id="foto-servico">
                        <h5 class="titulos_servico"><%= servicos[i].nome_produto %></h5>
                        <p class="desc_servico" id="desc_servico"><%= servicos[i].descricao_prod %></p>
                        <button class="preco_servico default_btn">R$<%= String(servicos[i].valor_produto).replace('.', ',') %></button>
                        <img src="img/favorito_icon.svg" alt="Ícone de coração para favoritar serviço" id="favorito">
                    </div>
                <% } %>
            </div>
        </section>
    </main>

</body>

</html>